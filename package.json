{
  "name": "nhl-api",
  "version": "2.0.0-alpha",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gretzky/nhl-api"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start",
    "build": "lerna run build",
    "test": "tsdx test",
    "postinstall": "lerna bootstrap",
    "prepare": "yarn build",
    "publish": "lerna publish --force-publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "axios": "^0.19.0"
  }
}
